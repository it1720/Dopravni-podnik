{% extends 'base.html.twig' %}

{% block title %}Hello EditLinesController!{% endblock %}

{% block body %}
<div class="list-group col-sm-9 col-md-7 col-lg-5 mx-auto">
{% for line in lines %}
<a href="#" data-target=".bd-modal-lg" data-toggle="modal" class="list-group-item">{{line}}</a>
{% endfor %}
</div>
<div  aria-hidden="true" id="myModal" aria-labelledby="myLargeModalLabel" class="modal fade bd-modal-lg" role="dialog" tabindex="-1">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit line</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
        {% for zastavka in zastavky %}
        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
            <option selected>{{zastavka}}</option>
            {% for zastavkaa in zastavky %}
            {% if zastavkaa != zastavka %}
                <option value={{zastavkaa}}>{{zastavkaa}}</option>
            {% endif %}
            {% endfor %}
        </select>
        {% endfor %}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
